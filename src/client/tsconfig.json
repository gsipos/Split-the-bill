{
	"compilerOptions": {
		"target": "ES2015",
		"charset": "utf-8",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"declaration": false,
		"sourceMap": true,
		"module": "amd",
  	"outDir": "../../app/client/",
		"rootDirs": [
			"../../node_modules",
			".",
			"../shared"
		],
		"listFiles": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": false,
		"moduleResolution": "node"
	},
	"exclude": [
		"node_modules"
	]
}
