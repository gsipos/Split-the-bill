{
  "name": "split-the-bill",
  "version": "1.0.0",
  "description": "",
  "main": "./app/server/server.js",
  "scripts": {
		"html:copy": "copyfiles -u 2 src/client/**/*.html app/client/",
    "tsc:client": "tsc -p src/client",
    "tsc:client:w": "tsc -p src/client -w",
    "tsc:server": "tsc -p src/server",
    "tsc:server:w": "tsc -p src/server -w",
    "tsc": "npm run tsc:client & npm run tsc:server",
    "clean": "rimraf ./app/client & rimraf ./app/server & npm prune",
    "liveLog": "azure site log tail split-the-bill",
    "serve": "live-server",
		"serve2": "npm run build & start-local.cmd",
    "test": "echo \"Error: no test specified\" && exit 0",
		"build": "npm run clean && npm run tsc & npm run html:copy",
    "postinstall": "npm run build"
  },
  "author": "Gergely Sipos",
  "license": "MIT",
